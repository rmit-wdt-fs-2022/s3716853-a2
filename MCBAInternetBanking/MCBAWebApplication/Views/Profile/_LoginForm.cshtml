@model ProfileLoginViewModel

<h1 class="display-4">Password</h1>
<form method="post" asp-controller="Profile" asp-action="Login">
    <div class="form-group">
        <div class="form-group">
            @Html.McbaPassword(model => model.PasswordOld)
        </div>
        <div class="form-group">
            @Html.McbaPassword(model => model.PasswordNew)
        </div>
        @Html.HiddenFor(model => model.CustomerID)
        @Html.HiddenFor(model => model.PasswordOldHash)
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary"/>
        </div>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
</form>