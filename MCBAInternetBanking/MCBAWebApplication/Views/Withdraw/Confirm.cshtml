@model DepositWithdrawViewModel
@{
    ViewData["Title"] = "Withdraw";
    List<string> accounts = (List<string>) @ViewBag.AccountList;
}

<form method="post" asp-action="Complete">
    <div class="form-group">
        <div class="form-group">
            @Html.McbaTextBox(model => model.Amount)
        </div>
        <div class="form-group">
            @Html.McbaDropDown(model => model.Account, new SelectList(accounts, "Select Account"), "Select Account")
        </div>
        <div class="form-group">
            @Html.McbaTextArea(model => model.Comment)
        </div>
        <div class="form-group">
            @Html.ActionLink("Cancel", "Index", null, null, new {@class = "btn btn-secondary"})
            <input type="submit" value="Confirm Deposit" class="btn btn-primary"/>
        </div>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
</form>