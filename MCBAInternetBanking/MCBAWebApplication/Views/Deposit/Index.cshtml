@model DepositViewModel
@{
    ViewData["Title"] = "Deposit";
    List<string> accounts = (List<string>) @ViewBag.AccountList;
}

<form method="post" asp-action="Index">
    <div class="form-group">
        <div class="form-group">
            @Html.TextBoxFor(model => model.Amount)
            @Html.LabelFor(model => model.Amount, Html.DisplayNameFor(model => model.Amount));
            @Html.ValidationMessageFor(model => model.Amount)
        </div>
        <div class="form-group">
            @Html.DropDownListFor(model => model.Account, new SelectList(accounts, "Select Account"))
            @Html.LabelFor(model => model.Account, Html.DisplayNameFor(model => model.Account));
            @Html.ValidationMessageFor(model => model.Account)
        </div>
        <div class="form-group">
            <input type="submit" value="Deposit" class="btn btn-primary"/>
        </div>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
</form>