@using MCBACommon.Utilities.Extensions
@model TransferViewModel
@{
    ViewData["Title"] = "Transfer";
    List<string> accounts = (List<string>) @ViewBag.AccountList;
}

<form method="post" asp-action="Confirm">
    <div class="form-group">
        <div class="form-group">
            @Html.McbaTextBox(model => model.Amount)
        </div>
        <div class="form-group">
            @Html.McbaDropDown(model => model.OriginAccount, new SelectList(accounts), "Select one of your accounts")
        </div>
        <div class="form-group">
            @Html.McbaTextBox(model => model.DestinationAccount)
        </div>
        <div class="form-group">
            @Html.McbaTextArea(model => model.Comment)
        </div>
        <div class="form-group">
            <input type="submit" value="Transfer" class="btn btn-primary"/>
        </div>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
</form>